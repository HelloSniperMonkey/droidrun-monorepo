# Iron Claw Environment Configuration
# Copy this file to .env and fill in your values

# === LLM Configuration ===
GEMINI_API_KEY=your_gemini_api_key_here

# === MobileRun Cloud (Primary) ===
MOBILERUN_API_KEY=your_mobilerun_api_key_here
MOBILERUN_DEVICE_ID=your_device_id_here

# === Vapi Configuration ===
VAPI_API_KEY=your_vapi_api_key_here
VAPI_PHONE_NUMBER_ID=your_vapi_phone_number_id_here

# === Telegram Bot (optional) ===
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# === Local DroidRun Fallback ===
# Use IP:PORT for wireless, or leave empty for USB auto-detect
DEVICE_SERIAL=
USE_TCP=true
PREFER_LOCAL_DEVICE=false

# === User Configuration ===
USER_PHONE_NUMBER=+14155551234

# === Server Configuration ===
HOST=0.0.0.0
PORT=8000
DEBUG=true

