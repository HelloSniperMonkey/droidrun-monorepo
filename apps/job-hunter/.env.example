# =============================================================================
# AI Job Hunter Configuration
# =============================================================================

# -----------------------------------------------------------------------------
# EXECUTION MODE (Required)
# -----------------------------------------------------------------------------
# "cloud" = Use MobileRun Cloud API (recommended for production)
# "local" = Use DroidRun with local ADB device
# In cloud mode, will auto-fallback to local if MobileRun fails and device is connected
EXECUTION_MODE=cloud

# -----------------------------------------------------------------------------
# MobileRun Cloud Configuration (for cloud mode)
# -----------------------------------------------------------------------------
MOBILERUN_API_KEY=your_mobilerun_api_key_here
MOBILERUN_API_URL=https://api.mobilerun.ai/v1

# -----------------------------------------------------------------------------
# DroidRun Local Configuration (for local mode)
# -----------------------------------------------------------------------------
# Device serial from `adb devices` (leave empty to auto-detect)
ADB_DEVICE_SERIAL=
# LLM provider: google, openai, anthropic
DROIDRUN_LLM_PROVIDER=google
# Model name (without provider prefix for DroidRun)
DROIDRUN_LLM_MODEL=gemini-2.5-flash
# Required for Google provider
GEMINI_API_KEY=your_gemini_api_key_here

# -----------------------------------------------------------------------------
# MongoDB Configuration (Required)
# -----------------------------------------------------------------------------
MONGODB_URI=mongodb://localhost:27017/
MONGODB_DB_NAME=ai_job_hunter

# -----------------------------------------------------------------------------
# Google Sheets Configuration (Required)
# -----------------------------------------------------------------------------
# 1. Create a service account in Google Cloud Console
# 2. Download credentials JSON file and save as credentials.json
# 3. Share your Google Sheet with the service account email (with editor permissions)
GOOGLE_SHEETS_CREDENTIALS_FILE=credentials.json
GOOGLE_SHEETS_SPREADSHEET_ID=your_google_sheet_id_here

# -----------------------------------------------------------------------------
# Resume Parsing Configuration (One Required)
# -----------------------------------------------------------------------------
# OpenRouter (FREE models available)
# Get your free API key at: https://openrouter.ai/
OPENROUTER_API_KEY=your_openrouter_api_key_here
# Free models: deepseek/deepseek-r1-0528:free, qwen/qwen3-coder:free, mistralai/devstral-2512:free
OPENROUTER_MODEL=deepseek/deepseek-r1-0528:free

# Anthropic (alternative for resume parsing)
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# -----------------------------------------------------------------------------
# Agent Configuration
# -----------------------------------------------------------------------------
MAX_STEPS_QUOTA=100
MIN_JOBS_APPLIED=10

# LLM Model for MobileRun Agent (cloud mode)
# Options: google/gemini-2.5-flash, google/gemini-1.5-pro, anthropic/claude-3-5-sonnet, etc.
LLM_MODEL=google/gemini-2.5-flash

# Agent Execution Settings
AGENT_EXECUTION_TIMEOUT=300
AGENT_TEMPERATURE=0.5

# -----------------------------------------------------------------------------
# Flask Configuration
# -----------------------------------------------------------------------------
FLASK_SECRET_KEY=change-this-to-a-random-secret-key
FLASK_HOST=0.0.0.0
FLASK_PORT=5123
